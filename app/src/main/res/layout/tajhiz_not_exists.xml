<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="vertical"
            android:weightSum="1" >

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/action_bar" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/darkhast_info" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="100" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/White"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.125"
                        android:background="@color/White"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:weightSum="3" >

                        <TextView
                            android:background="@android:drawable/editbox_background_normal"
                            android:id="@+id/tvDateTajhizNotExists"
                            style="@style/FillDarkhastInfo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical|center_horizontal" />

                        <TextView
                            style="@style/TitleUnder"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="تاریخ" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.125"
                        android:background="@color/White"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:weightSum="3" >

                        <TextView
                            android:background="@android:drawable/editbox_background_normal"
                            android:id="@+id/tvSaateTajhizNotExists"
                            style="@style/FillDarkhastInfo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="12:10:01"
                            android:singleLine="true" />

                        <TextView
                            style="@style/TitleUnder"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="ساعت" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:background="@color/White"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:weightSum="3" >

                        <EditText
                            android:background="@android:drawable/editbox_background_normal"
                            android:id="@+id/edtShrheTajhizNotExists"
                            style="@style/FillDarkhastInfo"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="2"
                             />

                        <TextView
                            style="@style/TitleUnder"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="شرح" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:background="@color/White"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="3dp" >

                        <Button
                            android:background="@drawable/button_round"
                            android:id="@+id/BtnSegmentSabt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/Sabt"
                            android:textColor="@color/White"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/navigashon_menu" />

</android.support.v4.widget.DrawerLayout>