<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sant.farzanegan.sant.NeedForSegment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gray2"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/abc_background_cache_hint_selector_material_light"
            android:orientation="vertical" >




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_material_light"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/abc_background_cache_hint_selector_material_light"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:weightSum="2" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/abc_background_cache_hint_selector_material_light"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:weightSum="9" >

                        <Spinner
                            android:id="@+id/spinnerResiverSegment"
                            style="@style/spinnereciver"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:background="@android:drawable/editbox_background_normal"
                            android:clickable="true"
                            android:drawSelectorOnTop="true"
                            android:dropDownVerticalOffset="-53dp"
                            android:spinnerMode="dropdown" />

                        <TextView
                            android:id="@+id/tvOlaviatSegment"
                            style="@style/TitleUnder"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="@string/Resiver" />

                        <TextView
                            android:id="@+id/tvResiversSegment"
                            style="@style/TitleUnder"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="@string/Resiver" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/abc_background_cache_hint_selector_material_light"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="3dp" >



                        <Button
                            android:text="@string/Sabt"
                            android:id="@+id/BtnSegmentSabt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:background="@drawable/button_round"
                            android:layout_below="@+id/scrollView" />



                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</RelativeLayout>
